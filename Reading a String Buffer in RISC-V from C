// reads @a bytes from stdin into the string @a buf.
// Returns the number of bytes read
//int read_string(char *buf, int bytes);
//a0=buf, a1=bytes

.section
.text
.equ STDIN, 0
.equ read_string 63
.globl read_string

li  t0,0 
addi a1,a1, 1
lb a0, 0(a0)
beq a0,STDIN,DONE

read_String_Length:
addi t1,t0, 1
lb t1, 8(t1)
bne t1, STDIN, DONE

DONE:
mv a0,t1



