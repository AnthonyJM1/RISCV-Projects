Please compile the following C program into RISC-V using the RV32I instruction set. If overflow is
encountered, please round the return into +âˆž as appropriate.

float silly_math3(float A){
return -A*1024;
}


#Single-Precision IEEE Format
.text
main:
li a0, 0x4048F5C3  
lui t0, 0x80000  #t0= 0x80000000
xori a0, a0, t0  #changing the signed bit 

silly_math:
srli t1, a0, 30 #pulling the sign bit 
srli t2,a0, 23 #Pulling out the exponent 
addi t2, t2, 10 #adding 2^10 to the exponent
# DO i need to add the same amount to the matnitssa as well?
li t3, 0xff #128
bgt t2,t3, overflow
j no_overflow

overflow:
li a0, 0x7F800000 #Loading + Infinity
li a7, 1
ecall

no_overflow:
# I need to input my signed bit, my exponent and my mantissa.
srli a0,a0,23
li t4, 0x807FFFFF        # 1000 0000 0111....111
and  a0, a0, t3            # a0 = float with exponent cleared
slli t1, t1, 23            # move exponent up to bits 30..23
or  a0, a0, t1            # insert exponent

ret



